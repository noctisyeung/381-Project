<html>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!--For responsive html-->
        <div class = 'header'>
        <head>
        <link rel="stylesheet" href="/css/main.css" />
        <title>S381F Project Dashboard</title>
        <h1>Restaurants</h1>
        <h1>Your api key:</h1>
        <h3><%=apikey%></h3>
        <h1 class = 'userDetail'><%=content%></h2>
        <button onclick="location.href='/doLogout'" id='logout'>Logout</button>
        <h1 class = 'userDetail'>Show <%=restaurants.length%> Restaurants For You Right Now</h1>
        </head>
        </div>
        <body>
            <div id='search-box'>
                    <form action='/doSearch' id='search-form' method='get' target='_top'>
                    <input id='search-text' name='keyword' placeholder='Search' type='text'/>
                    <select id='searchselect' name='option'>
                            <option value='name'>Name</option>
                            <option value='borough'>Borough</option>
                            <option value='cuisine'>Cuisine</option> 
                        </select> 
                    <button id='search-button' type='submit'>                     
                    <span>Search</span>
                    </button>
                    </form>
             </div> 
            <button onclick="location.href='/createRestaurant'" id='create'>Create New Restaurants</button>
                <table id='customers'>
                    <th>Name</th>
                    <% for (var i in restaurants){%>
                    <tr>
                        <td><a href='/display?id=<%=restaurants[i]._id%>'><%=restaurants[i].name%></a></td>
                    </tr>
                    <%}%>
                </table>
        </body>
    </html>